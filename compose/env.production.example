# Production Environment Configuration
# Copy this file to .env and update the values for your production environment

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret Key (Generate a strong secret key)
JWT_SECRET=your-super-secure-jwt-secret-key-for-production-minimum-32-characters

# CORS Origins (Comma-separated list of allowed origins)
CORS_ORIGINS=https://org-chatbot.com,https://www.org-chatbot.com,https://admin.org-chatbot.com

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Primary Database
POSTGRES_DB=org_chatbot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-super-secure-postgres-password-123

# PostgreSQL Replication
POSTGRES_REPLICATION_USER=replication_user
POSTGRES_REPLICATION_PASSWORD=your-super-secure-replication-password-123

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis Password
REDIS_PASSWORD=your-super-secure-redis-password-123

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================

# Default AI Model
OLLAMA_MODEL=llama3.2:3b

# Fast AI Model for quick responses
OLLAMA_FAST_MODEL=phi3:3.8b

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Grafana Admin Password
GRAFANA_PASSWORD=your-super-secure-grafana-password-123

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Version
VERSION=1.0.0

# Data Path (Where persistent data will be stored)
DATA_PATH=/opt/org-chatbot/data

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Session TTL in seconds (7 days)
SESSION_TTL_SECONDS=604800

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================

# SSL Certificate Path (if using custom certificates)
SSL_CERT_PATH=/etc/ssl/certs/org-chatbot.crt
SSL_KEY_PATH=/etc/ssl/private/org-chatbot.key

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# SMTP Configuration for notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Webhook URLs for notifications
WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=org-chatbot-backups
BACKUP_S3_REGION=us-east-1

# AWS Credentials for Backup
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# =============================================================================
# SECURITY ENHANCEMENTS
# =============================================================================

# Enable Security Headers
SECURITY_HEADERS_ENABLED=true

# Enable Rate Limiting
RATE_LIMITING_ENABLED=true

# Enable Request Logging
REQUEST_LOGGING_ENABLED=true

# Enable Audit Logging
AUDIT_LOGGING_ENABLED=true

# =============================================================================
# DEVELOPMENT/DEBUGGING
# =============================================================================

# Debug Mode (Set to false in production)
DEBUG=false

# Log Level (ERROR, WARN, INFO, DEBUG)
LOG_LEVEL=INFO

# =============================================================================
# HEALTH CHECK CONFIGURATION
# =============================================================================

# Health Check Timeout
HEALTH_CHECK_TIMEOUT=30

# Health Check Interval
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# RESOURCE LIMITS
# =============================================================================

# Maximum Memory Usage per Container
MAX_MEMORY_USAGE=2G

# Maximum CPU Usage per Container
MAX_CPU_USAGE=1.0

# =============================================================================
# NETWORKING
# =============================================================================

# Internal Network Subnet
INTERNAL_SUBNET=172.20.0.0/16

# External Port Mappings
EXTERNAL_PORT_HTTP=80
EXTERNAL_PORT_HTTPS=443
EXTERNAL_PORT_API=8000
EXTERNAL_PORT_GRAFANA=3001
EXTERNAL_PORT_PROMETHEUS=9090

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable AI Model Auto-scaling
AI_AUTO_SCALING_ENABLED=true

# Enable Real-time Monitoring
REAL_TIME_MONITORING_ENABLED=true

# Enable Performance Metrics
PERFORMANCE_METRICS_ENABLED=true

# Enable User Analytics
USER_ANALYTICS_ENABLED=true

# =============================================================================
# INTEGRATION CONFIGURATION
# =============================================================================

# External API Keys
OPENAI_API_KEY=your-openai-api-key-if-using
ANTHROPIC_API_KEY=your-anthropic-api-key-if-using

# Third-party Service URLs
EXTERNAL_API_BASE_URL=https://api.external-service.com
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_TIMEOUT=30

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================

# Cache TTL in seconds
CACHE_TTL=3600

# Cache Max Size
CACHE_MAX_SIZE=1000

# Enable Cache Warming
CACHE_WARMING_ENABLED=true

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================

# Email Notifications
EMAIL_NOTIFICATIONS_ENABLED=true
EMAIL_FROM=noreply@org-chatbot.com

# Slack Notifications
SLACK_NOTIFICATIONS_ENABLED=true
SLACK_CHANNEL=#org-chatbot-alerts

# =============================================================================
# COMPLIANCE & AUDITING
# =============================================================================

# GDPR Compliance
GDPR_COMPLIANCE_ENABLED=true
DATA_RETENTION_DAYS=365

# Audit Logging
AUDIT_LOG_RETENTION_DAYS=90
AUDIT_LOG_ENCRYPTION_ENABLED=true

# =============================================================================
# DISASTER RECOVERY
# =============================================================================

# Backup Strategy
BACKUP_STRATEGY=daily
BACKUP_COMPRESSION_ENABLED=true
BACKUP_ENCRYPTION_ENABLED=true

# Recovery Configuration
RECOVERY_TIMEOUT=3600
RECOVERY_RETRY_ATTEMPTS=3

# =============================================================================
# MONITORING ALERTS
# =============================================================================

# Alert Thresholds
CPU_ALERT_THRESHOLD=80
MEMORY_ALERT_THRESHOLD=85
DISK_ALERT_THRESHOLD=90
ERROR_RATE_ALERT_THRESHOLD=5

# Alert Channels
ALERT_EMAIL=admin@org-chatbot.com
ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/ALERT/WEBHOOK

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Database Connection Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30

# Redis Connection Pool
REDIS_POOL_SIZE=20
REDIS_MAX_CONNECTIONS=100

# API Rate Limiting
API_RATE_LIMIT_PER_MINUTE=1000
API_RATE_LIMIT_BURST=100

# =============================================================================
# SECURITY SCANNING
# =============================================================================

# Vulnerability Scanning
VULNERABILITY_SCANNING_ENABLED=true
VULNERABILITY_SCAN_SCHEDULE=0 0 * * 0  # Weekly on Sunday

# Security Headers
SECURITY_HEADERS_STRICT=true
HSTS_MAX_AGE=31536000
CSP_ENABLED=true

# =============================================================================
# ENVIRONMENT SPECIFIC
# =============================================================================

# Environment Name
ENVIRONMENT=production

# Region
REGION=us-east-1

# Availability Zone
AVAILABILITY_ZONE=us-east-1a

# Cluster Name
CLUSTER_NAME=org-chatbot-production

# =============================================================================
# END OF CONFIGURATION
# =============================================================================
